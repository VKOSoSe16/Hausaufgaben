			\fi
		\end{minipage}
	\fi
	
	\sbox1{\firstauthorvar}%
	\sbox2{\secondauthorvar}%
	\sbox3{\thirdauthorvar}%
	\sbox4{\fourthauthorvar}%
	
	\ifdim\wd1=0pt
		\ifdim\wd2=0pt
			\ifdim\wd3=0pt
				\ifdim\wd4=0pt % no author
					\\\error{WTF, there's not a single author ... how can this document exist? :o}
